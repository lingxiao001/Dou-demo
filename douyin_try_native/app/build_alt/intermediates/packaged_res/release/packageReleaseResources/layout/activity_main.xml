<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"> <!-- 浅灰色背景 -->

    <!-- ================= 顶部导航栏 ================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:paddingHorizontal="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 左侧菜单图标 -->
        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@android:drawable/ic_menu_sort_by_size" />

        <!-- 中间滑动标签栏 -->
        <!-- 使用 TabLayout 并在代码中设置为 MODE_SCROLLABLE -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            app:tabMode="scrollable"
            app:tabIndicatorColor="#000000"
            app:tabSelectedTextColor="#000000"
            app:tabTextColor="#888888"
            app:tabRippleColor="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_search"
            app:layout_constraintStart_toEndOf="@id/iv_menu"
            app:layout_constraintTop_toTopOf="parent">

            <!-- 这里通常在代码里动态添加 Tab，为了预览效果写死几个 -->
            <com.google.android.material.tabs.TabItem android:text="关注" />
            <com.google.android.material.tabs.TabItem android:text="精选" />
            <com.google.android.material.tabs.TabItem android:text="商城" />
            <com.google.android.material.tabs.TabItem android:text="推荐" />
        </com.google.android.material.tabs.TabLayout>

        <!-- 右侧搜索图标 -->
        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@android:drawable/ic_menu_search" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ================= 底部导航栏 ================= -->
    <!-- 这里可以用 BottomNavigationView，但为了完全自定义样式(如中间的加号)，手写布局更灵活 -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 首页 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_home"
            android:gravity="center"
            android:text="首页"
            android:textColor="#000000"
            android:textSize="10sp" />

        <!-- 朋友 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_friends"
            android:gravity="center"
            android:text="朋友"
            android:textSize="10sp" />

        <!-- 中间加号按钮 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_add_box"
                android:layout_gravity="center"
                tools:background="#000"/>
        </FrameLayout>

        <!-- 消息 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_message"
            android:gravity="center"
            android:text="消息"
            android:textSize="10sp" />

        <!-- 我 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_me"
            android:gravity="center"
            android:text="我"
            android:textSize="10sp" />
    </LinearLayout>

    <!-- ================= 中间 ViewPager2 内容 ================= -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>